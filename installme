##### VARS
INSTALL_DIR=~/.local/bin

#############################

  add_line() {
    ADD_LINE=${1}
    FILEPATH=${2}

    CHECK_LINE=`grep -F "${ADD_LINE}" ${FILEPATH}`
    [[ -z $CHECK_LINE ]] && echo "${ADD_LINE}" >> ${FILEPATH}
  }
  replace_line() { 
    SEARCH=${1}
    REPLACE=${2}
    FILEPATH=${3}
    FILEBASE=`basename ${3}`

    sed -e "s/${SEARCH}/${REPLACE}/" ${FILEPATH} > /tmp/${FILEBASE} 2>"$LOG"
    if [[ ${?} -eq 0 ]]; then
      mv /tmp/${FILEBASE} ${FILEPATH}
    else
      # cecho "failed: ${SEARCH} - ${FILEPATH}"
      echo "failed: ${SEARCH} - ${FILEPATH}"
    fi
  }

##### Boottraps
while getopts iv name
do
        case $name in
          i)iopt=1;;
          v)vopt=1;;
          *)echo "Invalid arg";;
        esac
done

if [[ ! -z $iopt ]]
then
{
echo "You choice option -i" || echo "Installation failed"
     mkdir -p ~/.local/bin/
     cp bashmarks.sh ~/.local/bin/

	echo ''
      echo 's <bookmark_name> - Saves the current directory as "bookmark_name"'
      echo 'g <bookmark_name> - Goes (cd) to the directory associated with "bookmark_name"'
      echo 'p <bookmark_name> - Prints the directory associated with "bookmark_name"'
      echo 'd <bookmark_name> - Deletes the bookmark'
      echo 'lbs                 - Lists all available bookmarks'
      
      #sed -i '/127.0.0.1/s/$/ 'pantasio.sh'/' /etc/hosts
      #ADD_LINE source ~/.local/bin/bashmarks.sh To ~/.bashrc
      #ADD_LINE source ~/.local/bin/bashmarks.sh To ~/.bashrc
      add_line "source ~/.local/bin/bashmarks.sh;" ~/.bashrc
      echo "bashmarks have been installed"  
      kill -SIGINT $$
}
fi

if [[ ! -z $vopt ]]
then
{
echo -e "You choice option -z\ntecmint_monitor version 0.1\nDesigned by Tecmint.com\nReleased Under Apache 2.0 License"

}
fi

if [[ $# -eq 0 ]]
then
{
	echo -e "you no choice option "
}
fi

